#!/usr/bin/env bash
# ------------------------------------------------------------------------------------------------
# Nursing App Development
# ------------------------------------------------------------------------------------------------
alias tdir='cd $HOME/VVV/www/mayo-nursing/htdocs/wp-content/themes/nursing-theme'
alias pdir='cd $HOME/VVV/www/mayo-nursing/htdocs/wp-content/mu-plugins'
alias vdir='cd $HOME/VVV'
alias vssh='vdir && vagrant ssh'
# ----------------------------------------------------------------------------------
# Directory Helpers
# ----------------------------------------------------------------------------------
alias grep='grep --color=auto'
alias qfind="find . -name "
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias l='ls -FGlAhp'
alias less='less -FSRXc'
alias ..='cd ../'
alias ...='cd ../..'
alias ~='$HOME'
alias c='clear'
alias which='type -all'
alias path='echo -e ${PATH//:/\\n}'
alias lr='ls -R | grep ":$" | sed -e '\''s/:$//'\'' -e '\''s/[^-][^\/]*\//--/g'\'' -e '\''s/^/   /'\'' -e '\''s/-/|/'\'' | less'

# ----------------------------------------------------------------------------------
# Git Shortcuts
# ----------------------------------------------------------------------------------
alias g='git'
alias ga='git add'
alias gac='git commit -a -m'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gpl='git pull'
alias gp='git push'
alias gr='git rm'
alias grc='git rm -r --cached'
alias gst='git status'
alias gsl='git status list'
alias gs='git stash'
alias gsa='git stash apply'


